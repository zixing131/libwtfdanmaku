<Window x:Class="danmuku.wpfdemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:danmuku.wpfdemo"
        AllowsTransparency="True" WindowStyle="None"
        ResizeMode="CanResize"
        mc:Ignorable="d"  Background="Transparent" 
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Blue" MouseLeftButtonDown="Grid_MouseLeftButtonDown" >
        <local:DanmukuView x:Name="dmkview" Background="Red" Margin="100">
            
        </local:DanmukuView> 
        <StackPanel>
            <Button Click="Button_Click" Width="100" Height="40">开始</Button>

            <Button Click="Button_Click_1" Width="100" Height="40">停止</Button>
        </StackPanel>
 
    </Grid>
</Window>
